<section id="home" class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-intro">
        <div class="hero-text">
          <h1 class="hero-title">
            Hi, I'm <span class="highlight">Your Name</span>
          </h1>
        </div>
        <div class="hero-image">
          <img src="https://images.pexels.com/photos/2379004/pexels-photo-2379004.jpeg?auto=compress&cs=tinysrgb&w=300&h=300&fit=crop" alt="Your Name" class="profile-pic" />
        </div>
      </div>
      <p class="hero-tagline">
        Data Science Engineer | Machine Learning Enthusiast
      </p>
      <p class="hero-description">
        I transform complex data into actionable insights using machine learning, statistical analysis, 
        and data engineering. Passionate about building scalable ML solutions that drive business impact.
      </p>
      <div class="hero-buttons">
        <a href="#projects" class="btn btn-primary">View My Work</a>
        <a href="#contact" class="btn btn-secondary">Get In Touch</a>
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    padding-top: 5rem;
  }

  .hero-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .hero-intro {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .hero-text {
    flex: 1;
  }

  .hero-image {
    flex-shrink: 0;
  }

  .profile-pic {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    object-fit: cover;
    border: 3px solid white;
    box-shadow: 0 8px 32px rgba(37, 99, 235, 0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .profile-pic:hover {
    transform: scale(1.05);
    box-shadow: 0 12px 40px rgba(37, 99, 235, 0.25);
  }

  .hero-title {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }

  .highlight {
    background: linear-gradient(135deg, #2563eb, #7c3aed);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-tagline {
    font-size: 1.5rem;
    font-weight: 500;
    color: #6b7280;
    margin-bottom: 2rem;
  }

  .hero-description {
    font-size: 1.25rem;
    line-height: 1.7;
    margin-bottom: 3rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .hero-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 80vh;
      padding-top: 3rem;
    }

    .hero-intro {
      flex-direction: column;
      gap: 1.5rem;
    }

    .hero-text {
      text-align: center;
    }

    .profile-pic {
      width: 70px;
      height: 70px;
    }

    .hero-title {
      font-size: 2.5rem;
    }

    .hero-tagline {
      font-size: 1.25rem;
    }

    .hero-description {
      font-size: 1.125rem;
    }

    .hero-buttons {
      flex-direction: column;
      align-items: center;
    }

    .btn {
      width: 200px;
    }
  }
</style>