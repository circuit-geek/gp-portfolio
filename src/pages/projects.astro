<style>
  .projects-main {
    padding-top: 5rem;
    min-height: 80vh;
  }

  .projects-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 3rem 0;
  }

  .projects-header h1 {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: #111827;
  }

  .projects-header p {
    font-size: 1.25rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .project-title {
    font-size: 1.375rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: #111827;
  }

  .project-description {
    flex-grow: 1;
    margin-bottom: 1.5rem;
    font-size: 1rem;
    line-height: 1.6;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tech-tag {
    background-color: #f3f4f6;
    color: #374151;
    padding: 0.25rem 0.75rem;
    border-radius: 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .project-links {
    display: flex;
    gap: 1rem;
    margin-top: auto;
  }

  .project-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background-color: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: 0.5rem;
    color: #374151;
    font-weight: 500;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .project-link:hover {
    background-color: #2563eb;
    border-color: #2563eb;
    color: white;
  }

  @media (max-width: 768px) {
    .projects-header h1 {
      font-size: 2.5rem;
    }

    .projects-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .project-links {
      flex-direction: column;
    }
  }
</style>